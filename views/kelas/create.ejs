<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      * {
        padding: 0;
        margin: 0;
        list-style: none;
      }
      #container {
        margin-left: 40px;
        margin-top: 40px;
      }

      #containerForm {
        display: flex;
        flex-direction: column;
        gap: 10px;
        width: 50%;
      }

      button {
        margin-top: 10px;
        width: 25%;
        padding: 12px 12px;
        border: none;
        border-radius: 5px;
        background-color: rgb(50, 50, 226);
        color: white;
      }

      button:hover {
        opacity: 0.6;
      }

      .formInput {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      input {
        padding: 10px 20px;
        border-radius: 5px;
        border: 1px solid rgba(0, 0, 0, 0.409);
      }

      nav {
        width: 100%;
        height: 30%;
        background-color: antiquewhite;
      }

      #nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 50px;
      }

      #nav-profile {
        margin-left: 20px;
        font-size: larger;
      }

      #nav-link li {
        display: flex;
        gap: 10px;
      }

      #nav-link li a {
        text-decoration: none;
        color: black;
        font-size: larger;
      }

      #nav-link li a:hover {
        opacity: 0.6;
        text-decoration: underline;
      }
      #nav-foot a {
        margin-right: 20px;
        font-size: larger;
        text-decoration: none;
        color: black;
      }
    </style>
  </head>
  <body>
    <nav>
      <div id="nav-container">
        <div id="nav-profile">Farhan Muhammad</div>
        <div>
          <ul id="nav-link">
            <li>
              <a href="/kelas">Kelas</a>
              <a href="/profile-pengguna">Profile Pengguna</a>
            </li>
          </ul>
        </div>
        <div id="nav-foot">
          <a href="/logout">Logout</a>
        </div>
      </div>
    </nav>
    <div id="container">
      <form>
        <div id="containerForm">
          <h1>Create Kelas</h1>
          <div class="formInput">
            <label for="nama_kelas">Nama Kelas</label>
            <input type="text" required placeholder="Masukkan Kelas" id="nama_kelas" />
          </div>
          <div class="formInput">
            <label for="semester">Semester</label>
            <input type="text" required placeholder="Masukkan Semester" id="semester" />
          </div>
          <button type="submit">kirim</button>
        </div>
      </form>
    </div>
  </body>

  <script>
    const form = document.querySelector("form");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      try {
        const nama_kelas = document.getElementById("nama_kelas").value;
        const semester = document.getElementById("semester").value;
        const result = await fetch("http://localhost:3000/api/kelas", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            nama_kelas,
            semester,
          }),
        });
        alert("Berhasil menambahkan data");
        window.location.href = "/kelas";
      } catch (error) {
        console.log(error.message);
      }
    });
  </script>
</html>
